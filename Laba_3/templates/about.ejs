<!-- templates/about.ejs -->
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Обо мне</title>
    <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f0f8ff;
                color: #333;
                margin: 0;
                display: flex;
                align-items: center;
                justify-content: center;
                height: 100vh;
            }

            #about {
                background-color: #fff; /* Белый фон для блока "Обо мне" */
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                text-align: center;
            }

            h1, p {
                margin: 0;
            }

            a {
                color: #0056b3; /* Темно-голубой цвет для ссылок */
                text-decoration: none;
            }

            a:hover {
                text-decoration: underline;
            }
        </style>
</head>
<body>
    <div id="about">
           <h1>Информация обо мне</h1>
           <p>Имя: <%= name %></p>
           <p>Фамилия: <%= surname %></p>
           <p>Возраст: <%= age %></p>
           <p>Email: <%= email %></p>
           <p>Город: <%= city %></p>
           <a href="/index">перейти к регистрации</a>
       </div>

</body>
</html>
